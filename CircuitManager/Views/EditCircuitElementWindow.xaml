<Window x:Class="CircuitManager.Views.EditCircuitElementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Circuit Element" Height="400" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Name"/>
        <TextBox x:Name="NameBox" Margin="0,0,0,10"/>


        <TextBlock Text="Machine Type"/>
        <ComboBox x:Name="MachineTypeCombo" Margin="0,0,0,10" />


        <TextBlock Text="Components"/>
        <ListBox x:Name="ComponentsList" SelectionMode="Multiple" Height="100" Margin="0,0,0,10" />


        <TextBlock Text="Next Circuit Element"/>
        <ComboBox x:Name="NextElementCombo" Margin="0,0,0,10" />


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Save" Click="Save_Click"/>
        </StackPanel>
    </StackPanel>
</Window>