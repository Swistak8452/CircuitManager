<Window x:Class="CircuitManager.Views.EditComponentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Component" Height="230" Width="380"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- form -->
            <RowDefinition Height="Auto"/>  <!-- buttons -->
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Label -->
                <RowDefinition Height="Auto"/> <!-- Name -->
                <RowDefinition Height="Auto"/> <!-- Direction -->
            </Grid.RowDefinitions>

            <TextBlock Text="Label:" VerticalAlignment="Center" />
            <TextBox x:Name="LabelBox" Grid.Column="1" Margin="8,4,0,8" />

            <TextBlock Grid.Row="1" Text="Name:" VerticalAlignment="Center" />
            <TextBox x:Name="NameBox" Grid.Row="1" Grid.Column="1" Margin="8,4,0,8" />

            <TextBlock Grid.Row="2" Text="Direction:" VerticalAlignment="Center" />
            <ComboBox x:Name="DirectionCombo" Grid.Row="2" Grid.Column="1" Margin="8,4,0,8" Width="150">
                <ComboBoxItem Content="Input"/>
                <ComboBoxItem Content="Output"/>
            </ComboBox>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Cancel" Width="90" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button Content="Save"   Width="90" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>