<Window x:Class="CircuitManager.Views.ExportCircuitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export to JSON" Height="400" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <ListBox x:Name="CircuitList" SelectionMode="Extended" DisplayMemberPath="Name"/>
        <Button Grid.Row="1" Content="Export" HorizontalAlignment="Right" Width="100" Click="Export_Click" Margin="0,10,0,0"/>
    </Grid>
</Window>