<Window x:Class="CircuitManager.Views.JsonViewerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exported JSON" Height="450" Width="800" ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox x:Name="JsonTextBox"
                 Grid.Row="0"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 FontSize="12"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 Margin="0,0,0,10"
        />
        <Button Grid.Row="1" Content="Close" Width="100" Height="30" HorizontalAlignment="Right" Click="Close_Click"/>
    </Grid>
</Window>