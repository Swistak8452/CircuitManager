<Window x:Class="CircuitManager.Views.AddComponentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Component" Height="200" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Shortcut"/>
            <TextBox x:Name="ShortcutBox" Margin="0,5,0,10"/>
            <TextBlock Text="Name"/>
            <TextBox x:Name="NameBox" Margin="0,5,0,10"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cancel" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Save" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>